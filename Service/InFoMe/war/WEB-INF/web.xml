<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>InFoMe</servlet-name>
		<servlet-class>com.infome.service.InFoMeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InFoMe</servlet-name>
		<url-pattern>/infome</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>GetVideoDetails</servlet-name>
	    <servlet-class>com.infome.cookstuff.GetVideoDetailsServlet</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>AddComment</servlet-name>
	    <servlet-class>com.infome.cookstuff.AddCommentServlet</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>AddEvent</servlet-name>
	    <servlet-class>com.infome.cookstuff.AddEventServlet</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>PutVideo</servlet-name>
	    <servlet-class>com.infome.cookstuff.PutQuestionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>GetVideoDetails</servlet-name>
	    <url-pattern>/getVideoDetails</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>PutVideo</servlet-name>
	    <url-pattern>/putVideo</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>AddComment</servlet-name>
	    <url-pattern>/addComment</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>AddEvent</servlet-name>
	    <url-pattern>/addEvent</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
