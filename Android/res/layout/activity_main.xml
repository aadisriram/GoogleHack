<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/comment_list_margin"
    android:paddingLeft="@dimen/comment_list_margin"
    android:paddingRight="@dimen/comment_list_margin"
    android:paddingTop="@dimen/comment_list_margin"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/home_page_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textColor="#e5e5e5"
        android:textSize="12sp" />

   <ListView
        android:id="@+id/home_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:textColor="#FFFFFF" />

</RelativeLayout>